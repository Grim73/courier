@import "lib"

.tracking
	background dark-color-bg3
	padding 20
	margin 0 0 1
	position relative
	overflow hidden

	header
	footer
		display flex
		align-items center
		justify-content flex-start
		flex-wrap wrap

	footer
		align-items flex-start

		.flex-spacer
			max-width 50px
			flex 1

	.sub-header
		margin 10 0 0
		table
			border-collapse collapse
			color dark-color-text0
			td
				padding 5
			.highlight
				color dark-color-text2

	h2
		font-weight 400
		font-size 18px
		text-transform uppercase

	.details
		margin 20 20 0 0
		flex 1
		cursor pointer
		color dark-color-text0

	em
		font-style normal
		color dark-color-accent

	.tracking-number
		color dark-color-text0
		margin 0 10

		a
			color inherit
			position relative

			&:after
				content 'â†—'
				position absolute
				top 0
				right -14
				font-size 11px
				font-weight 900
				opacity 0
				color dark-color-text3
				transition opacity .3s ease-out

			&:hover
				&:after
					opacity 1

	.status
		color dark-color-text0
		margin 0 10 0 0
		background dark-color-bg2
		padding 6 10 5
		border-radius 10


	.logo
		size 40
		min-size 40
		font-size 12px
		background #fff
		color #000
		display inline-flex
		align-items center
		text-align center
		margin 0 10 0 0
		overflow hidden
		border-radius 25px
		border 1px solid dark-color-bg1

	.checkpoints
		width 100%
		margin 10 0
		border-collapse collapse
		color dark-color-text2

		td
			border 1px solid dark-color-bg1
			padding 5 10

		thead td
			font-weight 600
			background dark-color-bg2
			padding 10


		.col-date
			width 160
		.col-location
			width 200
		.col-status
			width auto




@media only screen and (max-device-width: 500px)
	.tracking
		.status
			position absolute
			right 5
			top 30
		.tracking-number
			display block
			width 100%
			margin 20 0 0 5

			&:before
				content: 'Tracking number: '
			a:after
				opacity 1
