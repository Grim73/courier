@import "lib"


.header
	background dark-color-bg3
	border-bottom dark-color-bg2
	position sticky
	top 0
	height 64
	padding 0 20
	display flex
	align-items center
	justify-content space-between
	z-index 10

	.logo
		size 40
		margin-right 10

	h1
		flex 1
		font-weight 400
		font-family 'Courier New', Courier, monospace

	input
	.select-wrap
		width 200
		opacity 0
		margin-right 5px

	&:hover
		input
		.select-wrap
			opacity 1

	form
		display flex
		align-items center
		justify-content space-between

	form.loading
		opacity 0.5
		pointer-events none
